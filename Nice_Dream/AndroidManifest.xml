<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.game.screen"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="android.game.screen.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="PlayScreen"></activity>
        <activity android:name="OptionScreen"></activity>
        <activity android:name="AboutScreen"></activity>
        <activity android:name="MenuScreen"></activity>
    </application>

</manifest>